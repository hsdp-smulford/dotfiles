{
  "core": {
    "xdg_compliance": true,
    "default_shell": "zsh"
  },
  "credentials": {
    "sources": {
      "claude_api": {
        "type": "script",
        "path": "$XDG_CONFIG_HOME/claude-code/scripts/get_1password_key.sh"
      },
      "aws": {
        "type": "environment"
      },
      "github": {
        "type": "script",
        "path": "$XDG_CONFIG_HOME/claude-code/scripts/get_github_token.sh"
      }
    }
  },
  "workflow": {
    "auto_save": true,
    "session_persistence": true,
    "history_retention_days": 30
  },
  "editor_integration": {
    "vscode": true,
    "vim": true,
    "auto_format": true
  },
  "language_servers": {
    "golang": {
      "enabled": true,
      "linters": ["golangci-lint", "staticcheck"]
    },
    "python": {
      "enabled": true,
      "linters": ["pylint", "mypy", "black"]
    },
    "terraform": {
      "enabled": true,
      "linters": ["tflint", "tfsec"]
    },
    "javascript": {
      "enabled": true,
      "linters": ["eslint", "prettier"]
    },
    "kubernetes": {
      "enabled": true,
      "linters": ["kubeval", "kube-linter"]
    }
  },
  "development": {
    "local_env": {
      "colima": {
        "enabled": true,
        "auto_start": true,
        "default_profile": "dev"
      },
      "k8s": {
        "context_management": true,
        "default_context": "colima"
      }
    },
    "ci_integration": {
      "github_actions": true,
      "issue_ops": true
    }
  },
  "performance": {
    "cache_ttl": 3600,
    "concurrent_operations": 4,
    "memory_limit_mb": 1024
  }
}
